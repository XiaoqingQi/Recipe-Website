<% include partials/header %>
 
	<form id="form_login" action="/login" method="POST">
		<div class="container">
			<div class="jumbotron clearfix">
				<div class="form-horizontal">
					<div class="form-group">
						<div class="col-sm-offset-3">
							<div><label class="col-sm-2 control-label">User name</label></div>
						    <div class="col-sm-10">
						    	<input name="username" type="text" class="form-control login" placeholder="User name">
						    </div>
						</div>
				    </div>
				    <div class="form-group">
				   		 <div class="col-sm-offset-3">
						    <label class="col-sm-2 control-label">Password</label>
						    <div class="col-sm-10">
						    	<input name="password" type="password" class="form-control login" placeholder="Password">
						    	<div class="submit">
				    				<button type="submit" class="btn btn-success login-button">Sign in</button>
				    			</div>
						    </div>
						 </div>
				    </div>
				    
				</div>
			</div>
		</div>
	</form>
  
