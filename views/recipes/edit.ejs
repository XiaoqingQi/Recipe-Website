<% include ../partials/header %>

	<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
		<div class="container">
			<div class="jumbotron">
				<div class="form-horizontal">
					<div class="form-group">
						<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label">Recipe Name</label></div>
						    <div class="col-sm-10">
						    	<input name="recipe[name]" type="text" class="form-control edit-recipe-name" value="<%= recipe.name %>">
						    </div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label">Image</label></div>
						    <div class="col-sm-10">
						    	<input name="recipe[image]" type="text" class="form-control edit-recipe-image" value="<%= recipe.image %>">
						    </div>
						</div>
				    </div>
				    <div class="form-group">
				    	<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label">Ingredients</label></div>
						    <div class="col-sm-10">
						    	<textarea name="recipe[ingredients]" class="form-control edit-recipe-description" ><%= recipe.ingredients %></textarea>
						    </div>
						    <div><label class="col-sm-2 control-label">Directions</label></div>
						    <div class="col-sm-10">
						    	<textarea name="recipe[directions]" class="form-control edit-recipe-description" ><%= recipe.directions %></textarea>
						    	<button type="submit" class="btn btn-success edit-submit">Submit</button>
						    </div>    
						</div>
				    </div>
				    
				</div>
			</div>
		</div>
	</form>
	
<% include ../partials/footer %>