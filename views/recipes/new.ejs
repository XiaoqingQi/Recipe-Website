<% include ../partials/header %> 

	<form id="recipe" action="/recipes" method="POST">
		<div class="container">
			<div class="jumbotron">
				<div class="form-horizontal">
					<div class="form-group">
						<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label">Name</label></div>
						    <div class="col-sm-10">
						    	<input name="name" type="text" class="form-control recipe-name" placeholder="Recipe name">
						    </div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label">Image</label></div>
						    <div class="col-sm-10">
						    	<input name="image" type="text" class="form-control recipe-img" placeholder="image url">
						    </div>
						</div>
				    </div>
				    <div class="form-group">
				    	<div class="col-sm-offset-2">
							<div><label class="col-sm-2 control-label description-label">Ingredients</label></div>
						    <div class="col-sm-10">
						    	<textarea type="text" name="ingredients" class="form-control recipe-description" placeholder="Add ingredient here..."></textarea>
						    </div>
						    <div><label class="col-sm-2 control-label description-label">Directions</label></div>
						    <div class="col-sm-10">
						    	<textarea type="text" name="directions" class="form-control recipe-description" placeholder="Add directions here..."></textarea>
						    	<div class="submit">
				    				<button type="submit" class="btn btn-success recipe-add">Submit</button>
				    			</div>
						    </div>
						</div>
				    </div>   
				</div>
			</div>
		</div>
	</form>

<% include ../partials/footer %>