<% include partials/header %>

	<div class="container">
		<div class="jumbotron homepage-jumbotron">
			<h1><i class="fas fa-dove"></i> The Recipe Page</h1>
			<div><h3>Enjoy Every Dish!</h3></div>
			<div ><a class="btn btn-success btn-lg" href="/recipes/new" role="button">Add a recipe</a></div>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<% recipes.forEach(function(recipe){ %>
				<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
				    <div class="thumbnail recipes">
				    	<a href="/recipes/<%= recipe._id %>">
					    <img src="<%= recipe.image %>" class="img-rounded" style="height: 300px; width: 250px;">
					    <div class="caption">
					         <h3><%= recipe.name %></h3>
			    		</div>
				    </div>
				</div>
			<% }) %>
		</div>	
	</div>
	
<% include partials/footer %>
